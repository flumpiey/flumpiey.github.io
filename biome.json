{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": [
			"node_modules/**",
			"build/**",
			".svelte-kit/**",
			"static/**",
			"**/*.svelte"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules/**",
			"build/**",
			".svelte-kit/**",
			"**/*.svelte"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"include": ["**/*.svelte"],
			"formatter": { "enabled": false },
			"linter": { "enabled": false }
		}
	]
}
